<% content_for(:title) { "Preferences - Prompt" } %>

<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <h1 class="text-2xl font-bold text-gray-900">Preferences</h1>

  <div class="mt-6 bg-white shadow rounded-lg divide-y divide-gray-200">
    <% if current_user.gmail_account? %>
      <div class="p-6">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-sm font-medium text-gray-900">Enable Google login</h3>
            <p class="mt-1 text-sm text-gray-500">Allow signing in with your Google account (<%= current_user.email %>).</p>
          </div>
          <%= form_with url: web_preferences_path, method: :patch, class: "flex items-center" do |f| %>
            <% if current_user.google_auth_enabled? %>
              <input type="hidden" name="google_auth_enabled" value="0">
              <%= f.submit "Disable", class: "inline-flex items-center px-3 py-1.5 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 cursor-pointer" %>
            <% else %>
              <input type="hidden" name="google_auth_enabled" value="1">
              <%= f.submit "Enable", class: "inline-flex items-center px-3 py-1.5 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 cursor-pointer" %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="p-6">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="text-sm font-medium text-gray-900">Account</h3>
          <p class="mt-1 text-sm text-gray-500"><%= current_user.email %> &middot; <%= current_user.role.humanize %></p>
        </div>
      </div>
    </div>
  </div>
</div>
