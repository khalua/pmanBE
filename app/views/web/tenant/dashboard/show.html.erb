<% content_for(:title) { "Tenant Dashboard - Prompt" } %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-900">Tenant Dashboard</h1>
    <%= link_to "Edit Profile", edit_web_tenant_profile_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700" %>
  </div>

  <div class="mt-6">
    <h2 class="text-lg font-semibold text-gray-900">Your Unit</h2>
    <div class="mt-4 bg-white shadow rounded-lg p-6">
      <% if @unit %>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
          <div>
            <p class="text-sm font-medium text-gray-500">Property</p>
            <p class="mt-1 text-sm text-gray-900"><%= @unit.property.name.presence || @unit.property.address %></p>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Address</p>
            <p class="mt-1 text-sm text-gray-900"><%= @unit.property.address %></p>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-500">Unit</p>
            <p class="mt-1 text-sm text-gray-900"><%= @unit.identifier %><%= @unit.floor ? " (Floor #{@unit.floor})" : "" %></p>
          </div>
        </div>
      <% else %>
        <p class="text-gray-400">No unit assigned to you yet.</p>
      <% end %>
    </div>
  </div>

  <div class="mt-10">
    <h2 class="text-lg font-semibold text-gray-900">Maintenance Requests</h2>
    <div class="mt-4 bg-white shadow rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Issue</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Location</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Severity</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @maintenance_requests.each do |req| %>
            <tr class="hover:bg-gray-50 cursor-pointer" onclick="window.location='<%= web_tenant_maintenance_request_path(req) %>'">
              <td class="px-4 py-3 text-sm text-blue-600 hover:text-blue-800 font-medium"><%= req.issue_type %></td>
              <td class="px-4 py-3 text-sm text-gray-500"><%= req.location %></td>
              <td class="px-4 py-3">
                <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full
                  <%= case req.severity
                      when 'emergency' then 'bg-red-100 text-red-800'
                      when 'urgent' then 'bg-orange-100 text-orange-800'
                      when 'moderate' then 'bg-yellow-100 text-yellow-800'
                      else 'bg-gray-100 text-gray-800'
                      end %>">
                  <%= req.severity.humanize %>
                </span>
              </td>
              <td class="px-4 py-3">
                <div>
                  <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full
                    <%= case req.status
                        when 'submitted' then 'bg-yellow-100 text-yellow-800'
                        when 'vendor_quote_requested' then 'bg-purple-100 text-purple-800'
                        when 'quote_received' then 'bg-blue-100 text-blue-800'
                        when 'quote_accepted' then 'bg-green-100 text-green-800'
                        when 'quote_rejected' then 'bg-red-100 text-red-800'
                        when 'in_progress' then 'bg-blue-100 text-blue-800'
                        when 'completed' then 'bg-green-100 text-green-800'
                        when 'closed' then 'bg-gray-100 text-gray-600'
                        else 'bg-gray-100 text-gray-800'
                        end %>">
                    <%= req.status.humanize %>
                  </span>
                  <% if req.status == 'quote_accepted' %>
                    <p class="mt-1 text-xs text-gray-600">
                      A vendor has been assigned. They will contact you shortly to schedule the repair.
                    </p>
                  <% end %>
                </div>
              </td>
              <td class="px-4 py-3 text-sm text-gray-500"><%= local_time(req.created_at) %></td>
            </tr>
          <% end %>
          <% if @maintenance_requests.empty? %>
            <tr>
              <td colspan="5" class="px-4 py-6 text-sm text-gray-400 text-center">No maintenance requests</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
