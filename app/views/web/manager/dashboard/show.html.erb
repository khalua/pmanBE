<% content_for(:title) { "Property Manager Dashboard - Prompt" } %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-900">Property Manager Dashboard</h1>
    <%= link_to "Manage Vendors", web_manager_vendors_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700" %>
  </div>

  <%# KPI Cards %>
  <div class="mt-6 grid grid-cols-2 sm:grid-cols-5 gap-4">
    <div class="bg-white rounded-lg shadow p-5">
      <p class="text-sm font-medium text-gray-500">Properties</p>
      <p class="mt-2 text-3xl font-bold text-gray-900"><%= @properties.size %></p>
    </div>
    <div class="bg-white rounded-lg shadow p-5">
      <p class="text-sm font-medium text-gray-500">Total Units</p>
      <p class="mt-2 text-3xl font-bold text-gray-900"><%= @total_units %></p>
    </div>
    <div class="bg-white rounded-lg shadow p-5">
      <p class="text-sm font-medium text-gray-500">Occupied</p>
      <p class="mt-2 text-3xl font-bold text-gray-900"><%= @occupied_units %></p>
      <% vacant = @total_units - @occupied_units %>
      <% if vacant > 0 %>
        <p class="mt-1 text-xs text-yellow-600"><%= vacant %> vacant</p>
      <% end %>
    </div>
    <div class="bg-white rounded-lg shadow p-5">
      <p class="text-sm font-medium text-gray-500">Open Requests</p>
      <p class="mt-2 text-3xl font-bold <%= @open_requests_count > 0 ? 'text-red-600' : 'text-gray-900' %>"><%= @open_requests_count %></p>
    </div>
    <div class="bg-white rounded-lg shadow p-5">
      <p class="text-sm font-medium text-gray-500">Vendors</p>
      <p class="mt-2 text-3xl font-bold text-gray-900"><%= @vendors_count %></p>
    </div>
  </div>

  <%# Properties summary — vacancy + invitations %>
  <div class="mt-10">
    <div class="flex justify-between items-center">
      <h2 class="text-lg font-semibold text-gray-900">Your Properties</h2>
      <%= link_to "View all →", web_manager_properties_path, class: "text-sm text-indigo-600 hover:text-indigo-800" %>
    </div>
    <div class="mt-4 space-y-3">
      <% @properties.each do |property| %>
        <% units = property.units %>
        <% occupied = units.count { |u| u.current_tenants.any? } %>
        <% vacant = units.size - occupied %>
        <div class="bg-white shadow rounded-lg px-4 py-4 flex items-center justify-between">
          <div class="flex items-center gap-4 min-w-0">
            <%= link_to web_manager_property_path(property), class: "min-w-0" do %>
              <p class="text-sm font-semibold text-gray-900 truncate"><%= property.name.presence || property.address %></p>
              <% if property.name.present? %>
                <p class="text-xs text-gray-400 truncate"><%= property.address %></p>
              <% end %>
            <% end %>
            <span class="shrink-0 inline-flex px-2 py-0.5 text-xs font-medium rounded-full <%= property.house? ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
              <%= property.property_type.humanize %>
            </span>
          </div>
          <div class="flex items-center gap-3 ml-4 shrink-0">
            <% if units.any? %>
              <span class="inline-flex px-2 py-0.5 text-xs font-medium rounded-full bg-green-100 text-green-800"><%= occupied %> occupied</span>
              <% if vacant > 0 %>
                <span class="inline-flex px-2 py-0.5 text-xs font-medium rounded-full bg-yellow-100 text-yellow-800"><%= vacant %> vacant</span>
              <% end %>
            <% else %>
              <span class="text-xs text-gray-400">No units</span>
            <% end %>
            <%= link_to "Invitations", web_manager_property_invitations_path(property), class: "text-sm text-indigo-600 hover:text-indigo-800 font-medium" %>
          </div>
        </div>
      <% end %>
      <% if @properties.empty? %>
        <p class="text-gray-400 text-sm">No properties yet. <%= link_to "Add one", new_web_manager_property_path, class: "text-indigo-600 hover:text-indigo-800" %>.</p>
      <% end %>
    </div>
  </div>

  <%# Maintenance Requests %>
  <div class="mt-10">
    <h2 class="text-lg font-semibold text-gray-900">Maintenance Requests</h2>
    <div class="mt-4 bg-white shadow rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Issue</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Location</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tenant</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Property / Unit</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Severity</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Vendor</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @maintenance_requests.each do |req| %>
            <tr class="hover:bg-gray-50 cursor-pointer" onclick="window.location='<%= web_manager_maintenance_request_path(req) %>'">
              <td class="px-4 py-3 text-sm text-gray-900"><%= req.issue_type %></td>
              <td class="px-4 py-3 text-sm text-gray-500"><%= req.location %></td>
              <td class="px-4 py-3 text-sm"><%= link_to req.tenant.name, web_manager_tenant_path(req.tenant), class: "text-blue-600 hover:text-blue-800", onclick: "event.stopPropagation()" %></td>
              <td class="px-4 py-3 text-sm text-gray-500">
                <% if req.tenant.unit %>
                  <%= req.tenant.unit.property.name.presence || req.tenant.unit.property.address %> — Unit <%= req.tenant.unit.identifier %>
                <% else %>
                  -
                <% end %>
              </td>
              <td class="px-4 py-3">
                <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full
                  <%= case req.severity
                      when 'emergency' then 'bg-red-100 text-red-800'
                      when 'urgent' then 'bg-orange-100 text-orange-800'
                      when 'moderate' then 'bg-yellow-100 text-yellow-800'
                      else 'bg-gray-100 text-gray-800'
                      end %>">
                  <%= req.severity.humanize %>
                </span>
              </td>
              <td class="px-4 py-3">
                <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full
                  <%= case req.status
                      when 'submitted' then 'bg-yellow-100 text-yellow-800'
                      when 'vendor_quote_requested' then 'bg-purple-100 text-purple-800'
                      when 'quote_received' then 'bg-blue-100 text-blue-800'
                      when 'quote_accepted' then 'bg-green-100 text-green-800'
                      when 'quote_rejected' then 'bg-red-100 text-red-800'
                      when 'in_progress' then 'bg-blue-100 text-blue-800'
                      when 'completed' then 'bg-green-100 text-green-800'
                      when 'closed' then 'bg-gray-100 text-gray-600'
                      else 'bg-gray-100 text-gray-800'
                      end %>">
                  <%= req.status.humanize %>
                </span>
              </td>
              <td class="px-4 py-3 text-sm text-gray-500"><%= req.assigned_vendor&.name || "-" %></td>
            </tr>
          <% end %>
          <% if @maintenance_requests.empty? %>
            <tr>
              <td colspan="7" class="px-4 py-6 text-sm text-gray-400 text-center">No maintenance requests</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
