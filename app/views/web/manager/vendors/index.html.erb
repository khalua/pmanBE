<% content_for(:title) { "Manage Vendors - Prompt" } %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-900">Your Vendors</h1>
    <%= link_to "Back to Dashboard", web_manager_dashboard_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
  </div>

  <% if flash[:notice] %>
    <div class="mt-4 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg"><%= flash[:notice] %></div>
  <% end %>
  <% if flash[:alert] %>
    <div class="mt-4 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg"><%= flash[:alert] %></div>
  <% end %>

  <%# Add vendor form %>
  <% if @available_vendors.any? %>
    <div class="mt-6 bg-white shadow rounded-lg p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Add a Vendor</h2>
      <%= form_with url: web_manager_vendors_path, method: :post, class: "flex items-end gap-4" do |f| %>
        <div class="flex-1">
          <label for="vendor_id" class="block text-sm font-medium text-gray-700">Select Vendor</label>
          <select name="vendor_id" id="vendor_id" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm py-2 px-3 border">
            <% @available_vendors.each do |v| %>
              <option value="<%= v.id %>"><%= v.name %> â€” <%= v.vendor_type %></option>
            <% end %>
          </select>
        </div>
        <%= f.submit "Add Vendor", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 cursor-pointer" %>
      <% end %>
    </div>
  <% end %>

  <%# Current vendors table %>
  <div class="mt-6 bg-white shadow rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
          <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
          <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Phone</th>
          <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Rating</th>
          <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Available</th>
          <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @vendors.each do |vendor| %>
          <tr>
            <td class="px-4 py-3 text-sm font-medium text-gray-900"><%= vendor.name %></td>
            <td class="px-4 py-3 text-sm text-gray-500"><%= vendor.vendor_type %></td>
            <td class="px-4 py-3 text-sm text-gray-500"><%= vendor.phone_number || "-" %></td>
            <td class="px-4 py-3 text-sm text-gray-500"><%= vendor.rating ? "#{vendor.rating}/5" : "-" %></td>
            <td class="px-4 py-3">
              <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full <%= vendor.is_available ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                <%= vendor.is_available ? "Yes" : "No" %>
              </span>
            </td>
            <td class="px-4 py-3">
              <%= button_to "Remove", web_manager_vendor_path(vendor), method: :delete, class: "text-sm text-red-600 hover:text-red-800 font-medium", data: { turbo_confirm: "Remove #{vendor.name} from your vendors?" } %>
            </td>
          </tr>
        <% end %>
        <% if @vendors.empty? %>
          <tr>
            <td colspan="6" class="px-4 py-6 text-sm text-gray-400 text-center">No vendors added yet.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
