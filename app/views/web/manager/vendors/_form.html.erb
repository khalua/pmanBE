<%= form_with model: [:web, :manager, vendor], class: "space-y-6" do |f| %>
  <% if vendor.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg text-sm">
      <ul class="list-disc list-inside space-y-1">
        <% vendor.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# Business Info %>
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-base font-semibold text-gray-900 mb-4">Business Information</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div class="sm:col-span-2">
        <%= f.label :name, "Business Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :name, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm py-2 px-3 border", placeholder: "e.g. Quick Fix Plumbing" %>
      </div>

      <div>
        <%= f.label :vendor_type, "Service Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :vendor_type, Vendor.vendor_types.keys.map { |k| [k.humanize, k] },
            { prompt: "Select type" },
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm py-2 px-3 border" %>
      </div>

      <div>
        <%= f.label :address, "Full Address", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :address, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm py-2 px-3 border", placeholder: "123 Main St, City, State 12345" %>
      </div>

      <div>
        <%= f.label :website, "Website", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.url_field :website, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm py-2 px-3 border", placeholder: "https://example.com" %>
      </div>
    </div>
  </div>

  <%# Contact Info %>
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-base font-semibold text-gray-900 mb-4">Contact Information</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div>
        <%= f.label :contact_name, "Main Contact Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :contact_name, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm py-2 px-3 border", placeholder: "e.g. John Smith" %>
      </div>

      <div>
        <%= f.label :cell_phone, class: "block text-sm font-medium text-gray-700 mb-1" do %>
          Cell Phone <span class="text-red-500">*</span>
          <span class="text-xs text-gray-400 font-normal ml-1">(used to send SMS quote requests)</span>
        <% end %>
        <%= f.telephone_field :cell_phone, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm py-2 px-3 border", placeholder: "+1 (555) 000-0000" %>
      </div>

      <div>
        <%= f.label :phone_number, "Office Phone", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.telephone_field :phone_number, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm py-2 px-3 border", placeholder: "+1 (555) 000-0000" %>
      </div>

      <div>
        <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm py-2 px-3 border", placeholder: "contact@vendor.com" %>
      </div>
    </div>
  </div>

  <%# Notes %>
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-base font-semibold text-gray-900 mb-4">Private Notes</h2>
    <%= f.label :notes, "Notes", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :notes, rows: 3, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm py-2 px-3 border", placeholder: "Internal notes about this vendor (not shared with vendor)" %>
  </div>

  <div class="flex items-center justify-end gap-3">
    <%= link_to "Cancel", web_manager_vendors_path, class: "text-sm text-gray-600 hover:text-gray-800" %>
    <%= f.submit class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 cursor-pointer" %>
  </div>
<% end %>
