<% content_for(:title) { "My Properties - Prompt" } %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-900">My Properties</h1>
    <%= link_to "Add Property", new_web_manager_property_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
  </div>

  <div class="mt-6 space-y-4">
    <% if @properties.empty? %>
      <div class="bg-white shadow rounded-lg px-4 py-6 text-sm text-gray-400 text-center">
        No properties yet. <%= link_to "Add your first property", new_web_manager_property_path, class: "text-indigo-600 hover:text-indigo-800" %>.
      </div>
    <% end %>

    <% @properties.each do |property| %>
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <%# Property header row %>
        <div class="px-4 py-4 flex items-center justify-between border-b border-gray-100">
          <div class="flex items-center gap-4">
            <div>
              <p class="text-sm font-semibold text-gray-900"><%= property.name.presence || property.address %></p>
              <% if property.name.present? %>
                <p class="text-xs text-gray-400"><%= property.address %></p>
              <% end %>
            </div>
            <span class="inline-flex px-2 py-0.5 text-xs font-medium rounded-full <%= property.house? ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
              <%= property.property_type.humanize %>
            </span>
            <% occupied = property.units.count { |u| u.current_tenants.any? } %>
            <% vacant = property.units.size - occupied %>
            <% if property.units.any? %>
              <span class="inline-flex px-2 py-0.5 text-xs font-medium rounded-full bg-green-100 text-green-800"><%= occupied %> occupied</span>
              <% if vacant > 0 %>
                <span class="inline-flex px-2 py-0.5 text-xs font-medium rounded-full bg-yellow-100 text-yellow-800"><%= vacant %> vacant</span>
              <% end %>
            <% else %>
              <span class="text-xs text-gray-400">No units</span>
            <% end %>
          </div>
          <div class="flex gap-3 text-sm">
            <%= link_to "View", web_manager_property_path(property), class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
            <%= link_to "Edit", edit_web_manager_property_path(property), class: "text-gray-600 hover:text-gray-800 font-medium" %>
            <%= button_to "Delete", web_manager_property_path(property), method: :delete,
                  data: { turbo_confirm: "Delete #{property.name.presence || property.address}?" },
                  class: "text-red-600 hover:text-red-800 font-medium" %>
          </div>
        </div>

        <%# Unit rows %>
        <% if property.units.any? %>
          <table class="min-w-full">
            <thead class="bg-gray-50">
              <tr>
                <th class="pl-8 pr-4 py-2 text-left text-xs font-medium text-gray-400 uppercase">Unit</th>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-400 uppercase">Floor</th>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-400 uppercase">Status</th>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-400 uppercase">Tenant</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <% property.units.each do |unit| %>
                <% current = unit.current_tenants %>
                <tr class="hover:bg-gray-50">
                  <td class="pl-8 pr-4 py-2 text-sm font-medium text-gray-700"><%= unit.identifier %></td>
                  <td class="px-4 py-2 text-sm text-gray-400"><%= unit.floor || "—" %></td>
                  <td class="px-4 py-2">
                    <% if current.any? %>
                      <span class="inline-flex px-2 py-0.5 text-xs font-medium rounded-full bg-green-100 text-green-700">Occupied</span>
                    <% else %>
                      <span class="inline-flex px-2 py-0.5 text-xs font-medium rounded-full bg-yellow-100 text-yellow-700">Vacant</span>
                    <% end %>
                  </td>
                  <td class="px-4 py-2 text-sm text-gray-500">
                    <% if current.any? %>
                      <% current.each do |tenant| %>
                        <%= link_to tenant.name, web_manager_tenant_path(tenant), class: "text-indigo-600 hover:text-indigo-800 mr-2" %>
                      <% end %>
                    <% else %>
                      <span class="text-gray-300">—</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <div class="pl-8 py-3 text-sm text-gray-400">
            No units yet. <%= link_to "Add a unit", new_web_manager_property_unit_path(property), class: "text-indigo-600 hover:text-indigo-800" %>.
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
