<% content_for(:title) { "Admin Dashboard - Prompt" } %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-900">Admin Dashboard</h1>
    <div class="flex gap-3">
      <%= link_to "Manage Users", web_admin_users_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
      <%= link_to "Manage Properties", web_admin_properties_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" %>
    </div>
  </div>

  <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <div class="bg-white rounded-lg shadow p-6">
      <p class="text-sm font-medium text-gray-500">Tenants</p>
      <p class="mt-2 text-3xl font-bold text-gray-900"><%= @tenant_count %></p>
    </div>
    <div class="bg-white rounded-lg shadow p-6">
      <p class="text-sm font-medium text-gray-500">Property Managers</p>
      <p class="mt-2 text-3xl font-bold text-gray-900"><%= @property_manager_count %></p>
    </div>
    <div class="bg-white rounded-lg shadow p-6">
      <p class="text-sm font-medium text-gray-500">Vendors</p>
      <p class="mt-2 text-3xl font-bold text-gray-900"><%= @vendor_count %></p>
    </div>
    <div class="bg-white rounded-lg shadow p-6">
      <p class="text-sm font-medium text-gray-500">Properties</p>
      <p class="mt-2 text-3xl font-bold text-gray-900"><%= @property_count %></p>
    </div>
    <div class="bg-white rounded-lg shadow p-6">
      <p class="text-sm font-medium text-gray-500">Units</p>
      <p class="mt-2 text-3xl font-bold text-gray-900"><%= @unit_count %></p>
    </div>
    <div class="bg-white rounded-lg shadow p-6">
      <p class="text-sm font-medium text-gray-500">Maintenance Requests</p>
      <p class="mt-2 text-3xl font-bold text-gray-900"><%= @total_maintenance_requests %></p>
    </div>
  </div>

  <div class="mt-10 grid grid-cols-1 lg:grid-cols-2 gap-8">
    <div>
      <h2 class="text-lg font-semibold text-gray-900">Recent Maintenance Requests</h2>
      <div class="mt-4 bg-white shadow rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Issue</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tenant</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @recent_requests.each do |req| %>
              <tr>
                <td class="px-4 py-3 text-sm text-gray-900"><%= req.issue_type %></td>
                <td class="px-4 py-3 text-sm text-gray-500"><%= req.tenant.name %></td>
                <td class="px-4 py-3">
                  <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full
                    <%= case req.status
                        when 'submitted' then 'bg-yellow-100 text-yellow-800'
                        when 'completed' then 'bg-green-100 text-green-800'
                        when 'in_progress' then 'bg-blue-100 text-blue-800'
                        else 'bg-gray-100 text-gray-800'
                        end %>">
                    <%= req.status.humanize %>
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div>
      <h2 class="text-lg font-semibold text-gray-900">Recent Users</h2>
      <div class="mt-4 bg-white shadow rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Role</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @users.each do |user| %>
              <tr>
                <td class="px-4 py-3 text-sm text-gray-900"><%= user.name %></td>
                <td class="px-4 py-3 text-sm text-gray-500"><%= user.email %></td>
                <td class="px-4 py-3 text-sm text-gray-500"><%= user.role.humanize %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
