<% content_for(:title) { "Accept Invitation - Prompt" } %>

<div class="min-h-[80vh] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-gray-900">Welcome to Prompt!</h2>
      <p class="mt-2 text-sm text-gray-600">
        You've been invited to join <strong><%= @invitation.unit.property.name.presence || @invitation.unit.property.address %></strong> â€” Unit <strong><%= @invitation.unit.identifier %></strong>.
      </p>
      <p class="mt-1 text-sm text-gray-600">Set up your password to get started.</p>
    </div>

    <%= form_with url: register_path, method: :post, class: "mt-8 space-y-6" do |f| %>
      <input type="hidden" name="invite_code" value="<%= @invitation.code %>">

      <div class="space-y-4">
        <div>
          <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :name, value: @invitation.tenant_name, required: true, autofocus: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2 border" %>
        </div>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <input type="email" value="<%= @invitation.tenant_email %>" disabled class="mt-1 block w-full rounded-md bg-gray-100 border-gray-300 shadow-sm px-3 py-2 border text-gray-500 cursor-not-allowed">
        </div>

        <div>
          <%= f.label :mobile_phone, "Mobile phone", class: "block text-sm font-medium text-gray-700" %>
          <%= f.telephone_field :mobile_phone, required: true, placeholder: "+1 (555) 123-4567", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2 border" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2 border" %>
        </div>
        <div>
          <%= f.label :password_confirmation, "Confirm password", class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password_confirmation, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2 border" %>
        </div>
      </div>

      <%= f.submit "Create account & accept invitation", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer" %>
    <% end %>

    <p class="text-center text-sm text-gray-500">
      Already have an account? <%= link_to "Log in", login_path, class: "text-indigo-600 hover:text-indigo-500" %>
    </p>
  </div>
</div>
